{
  "manifest_version": 3,
  "name": "Send-to-AI",
  "description": "Send selected text or links to various AI platforms (ChatGPT, Gemini, Claude, POE, DeepSeek, Perplexity) with templated prompts.",
  "version": "0.1.0",
  "default_locale": "vi",
  "icons": {
    "16": "src/assets/icons/icon16.svg",
    "48": "src/assets/icons/icon48.svg",
    "128": "src/assets/icons/icon128.svg"
  },
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "src/background/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "src/assets/icons/icon16.svg",
      "48": "src/assets/icons/icon48.svg"
    }
  },
  "options_page": "src/options/options.html",
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://*.openai.com/*",
        "https://*.google.com/*",
        "https://perplexity.ai/*",
        "https://poe.com/*",
        "https://*.claude.ai/*"
      ],
      "js": ["src/content/content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/assets/_locales/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "minimum_chrome_version": "88"
}