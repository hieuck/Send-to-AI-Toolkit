{
  "manifest_version": 3,
  "name": "__MSG_extension_name__",
  "description": "__MSG_extension_description__",
  "version": "0.1.0",
  "default_locale": "vi",
  "icons": {
    "16": "src/assets/icons/icon16.svg",
    "48": "src/assets/icons/icon48.svg",
    "128": "src/assets/icons/icon128.svg"
  },
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "src/background/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "src/assets/icons/icon16.svg",
      "48": "src/assets/icons/icon48.svg"
    }
  },
  "options_page": "src/options/options.html",
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://*.openai.com/*",
        "https://*.google.com/*",
        "https://perplexity.ai/*",
        "https://poe.com/*",
        "https://*.claude.ai/*",
        "https://grok.com/*"
      ],
      "js": ["src/content/content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "_locales/*",
        "src/assets/icons/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "minimum_chrome_version": "88"
}